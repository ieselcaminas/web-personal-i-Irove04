{% extends 'base.html.twig' %}

{% block title %}Inicio Pikmin{% endblock %}

{% block body %}
    <style>
        body {
            background: url('{{ asset('images/pikmin_bg.png') }}') no-repeat center center fixed;
            background-size: cover;
            margin: 0;
            font-family: "Poppins", sans-serif;
            color: green;
        }

        .container {
            max-width: 900px;
            margin: 2rem auto;
            padding: 1rem;
        }

        h1 {
            color: #4CAF50;
            margin-bottom: 0.5rem;
        }

        h2 {
            color: #666;
            margin-bottom: 1rem;
        }

        p {
            color: #444;
            margin-bottom: 1rem;
        }

        /* Cards Pikmin */
        .pikmin-card {
            background: rgba(255, 255, 255, 0.9);
            padding: 1rem;
            margin-bottom: 1rem;
            border-radius: 12px;
            box-shadow: 0 6px 15px rgba(0,0,0,0.15);
            transition: transform 0.2s ease;
        }

        .pikmin-card:hover {
            transform: translateY(-3px);
        }

        /* Botones */
        .pikmin-card .btn {
            display: inline-block;
            padding: 0.4rem 0.8rem;
            border-radius: 8px;
            font-size: 0.9rem;
            text-decoration: none;
            color: white;
            cursor: pointer;
            transition: all 0.2s ease;
            margin-right: 0.5rem;
        }

        .btn-edit {
            background-color: #2196F3;
        }

        .btn-edit:hover {
            background-color: #1976D2;
        }

        .btn-delete {
            background-color: #f44336;
        }

        .btn-delete:hover {
            background-color: #d32f2f;
        }

        /* Bot√≥n crear */
        .btn-create {
            display: inline-block;
            padding: 0.5rem 1rem;
            border-radius: 10px;
            font-size: 1rem;
            background-color: #4CAF50;
            color: white;
            text-decoration: none;
            transition: all 0.2s ease;
            margin-top: 1rem;
        }

        .btn-create:hover {
            background-color: #45a049;
            transform: translateY(-2px);
        }

        /* Mensaje cuando no hay Pikmins */
        .no-pikmins {
            color: #555;
            font-style: italic;
        }
    </style>

    <div class="container">
        <h1>Pikmin</h1>
        <h2>Bienvenido al gestor de Pikmin</h2>

        {% for pikmin in pikmins %}
            <div class="pikmin-card">
                {{ include('partials/datos_pikmin.html.twig', {'pikmin': pikmin}) }}

                <div class="mt-2">
                    <a href="{{ path('editar', {'codigo': pikmin.id}) }}" class="btn btn-edit">
                        Editar
                    </a>
                    <a href="{{ path('eliminar_pikmin', {'id': pikmin.id}) }}"
                       class="btn btn-delete"
                       onclick="return confirm('¬øSeguro que quieres eliminar a {{ pikmin.nombre }}? üò¢');">
                        Eliminar
                    </a>
                </div>
            </div>
        {% else %}
            <p class="no-pikmins">No hay Pikmins registrados todav√≠a</p>
        {% endfor %}

        <a href="{{ path('nuevo') }}" class="btn-create">
            Crear nuevo Pikmin
        </a>
    </div>
{% endblock %}
